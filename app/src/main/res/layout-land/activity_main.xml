<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mediumGray"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/MainRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="#1307"
                android:textSize="30dp"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/settings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/settings_gear_720x720"
                android:layout_alignParentTop="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:background="@color/lightGray">

                <Button
                    android:id="@+id/preset1"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:text="1"/>
                <Button
                    android:id="@+id/preset2"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:text="2"/>
                <Button
                    android:id="@+id/preset3"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:text="3"/>
                <Button
                    android:id="@+id/preset4"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:text="4"/>
                <Button
                    android:id="@+id/preset5"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:text="5"/>
                <Button
                    android:id="@+id/preset6"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:text="6"/>
                <Button
                    android:id="@+id/defaultMsg"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:text="Default"/>
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/mainName"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="60dp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/mainMessage"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="I am in the Embedded Lab"
            android:textSize="60dp"
            android:textStyle="bold"
            android:gravity="center" />



    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/lightGray"
            android:id="@+id/linearLayout2">

            <Button
                android:layout_width="125dp"
                android:layout_height="75dp"
                android:text="Main"/>

            <Button
                android:id="@+id/schedule"
                android:layout_width="125dp"
                android:layout_height="75dp"
                android:text="Schedule"
                android:onClick="goToSchedule"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/sync"
            android:layout_width="53dp"
            android:layout_height="40dp"
            android:background="@drawable/sync_703_720"
            android:layout_alignTop="@+id/linearLayout2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp" />

    </RelativeLayout>

</RelativeLayout>
